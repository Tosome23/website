{
  "layout: post.njk",
  "permalink": "/blog/{{ page.fileSlug }}/"
}


<article class="post">
  <h1 class="post-title">{{ title }}</h1>
  <p class="post-meta">{{ page.date | date }}</p>
  {% if thumbnail %}<img class="post-hero" src="{{ thumbnail }}" alt="{{ title }}">{% endif %}
  <div class="post-content">{{ content | safe }}</div>
  <p class="backlink"><a href="/blog/">← 블로그 목록</a></p>
</article>
